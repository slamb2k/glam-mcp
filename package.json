{
  "name": "glam-mcp",
  "version": "1.1.11",
  "description": "Pure MCP Server for Comprehensive Git Flow Automation - Model Context Protocol Integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "echo 'No TypeScript in this project'",
    "build": "npm run lint && npm run test",
    "prepare": "husky"
  },
  "mcp": {
    "mcpVersion": "0.1.0",
    "server": {
      "command": "node",
      "args": [
        "src/index.js"
      ]
    }
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "git",
    "git-automation",
    "github-flow",
    "workflow-automation",
    "development-tools",
    "ai-tools",
    "branching",
    "pull-requests",
    "continuous-integration"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "simple-git": "^3.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-node": "^30.0.4",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/glam-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/glam-mcp/issues"
  },
  "homepage": "https://github.com/your-username/glam-mcp#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "NODE_OPTIONS='--experimental-vm-modules' jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
